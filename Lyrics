void setup()
{
  lcd.init();
}

void loop()
{
  //CHUROS
  lcd.setCursor(0,0);
  for (int i = 0; i < sizeof(array1) - 1; i++)
  {
    lcd.print(array1[i]);
    delay(50);
  }
  delay(2000);

  lcd.setCursor(5,1);
  for (int i = 0; i < sizeof(array2) - 1; i++)
