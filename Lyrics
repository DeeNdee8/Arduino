#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

int seconds = 0;

LiquidCrystal_I2C lcd(0x27, 16, 2);

//Lyrics
char array1[]= "SO, WHY DO I";
char array2[]= "KEEP DIVING";
char array3[]= "INTO YOUU??";
char array4[]= "WHEN I KNOW";
